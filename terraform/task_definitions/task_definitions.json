[
  {
    "links": [
      "backend",
      "frontend"
    ],
    "cpu": 256,
    "essential": true,
    "image": "${nginx_image_url}",
    "memory": 128,
    "memoryReservation": 10,
    "name": "nginx",
    "portMappings": [
      {
        "containerPort": 80,
        "hostPort": 0
      }
    ],
    "logConfiguration": {
      "logDriver": "awslogs",
      "options": {
        "awslogs-group": "${log_group_name}",
        "awslogs-region": "${log_group_region}"
      }
    }
  },
  {
    "cpu": 256,
    "essential": true,
    "image": "${frontend_image_url}",
    "memory": 128,
    "memoryReservation": 10,
    "name": "frontend",
    "portMappings": [
      {
        "containerPort": 80,
        "hostPort": 0
      }
    ],
    "logConfiguration": {
      "logDriver": "awslogs",
      "options": {
        "awslogs-group": "${log_group_name}",
        "awslogs-region": "${log_group_region}"
      }
    }
  },
  {
    "cpu": 256,
    "essential": true,
    "image": "${backend_image_url}",
    "memory": 128,
    "memoryReservation": 10,
    "name": "backend",
    "portMappings": [
      {
        "containerPort": 80,
        "hostPort": 0
      }
    ],
    "logConfiguration": {
      "logDriver": "awslogs",
      "options": {
        "awslogs-group": "${log_group_name}",
        "awslogs-region": "${log_group_region}"
      }
    }
  }
]
