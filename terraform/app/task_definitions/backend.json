[
  {
    "cpu": 256,
    "essential": true,
    "image": "${image_url}",
    "memory": 128,
    "memoryReservation": 10,
    "name": "${container_name}",
    "portMappings": [
      {
        "containerPort": 80,
        "protocol": "tcp"
      }
    ],
    "entrypoint": [
      "/entrypoint.sh"
    ],
    "command": [
      "apache2-foreground"
    ],
    "environment": [
      {
        "name": "MYSQL_HOST",
        "value": "${MYSQL_HOST}"
      },
      {
        "name": "MYSQL_DB",
        "value": "${MYSQL_DB}"
      },
      {
        "name": "MYSQL_USER",
        "value": "${MYSQL_USER}"
      },
      {
        "name": "MYSQL_PASS",
        "value": "${MYSQL_PASSWORD}"
      }
    ],
    "logConfiguration": {
      "logDriver": "awslogs",
      "options": {
        "awslogs-group": "${log_group_name}",
        "awslogs-region": "${log_group_region}"
      }
    },
    "networkMode": "awsvpc"
  },
  {
    "cpu": 256,
    "essential": true,
    "image": "${image_url}",
    "memory": 128,
    "memoryReservation": 10,
    "name": "backend_migrations",
    "entrypoint": [
      "/migrations.sh"
    ],
    "command": [
      "sleep",
      "infinity"
    ],
    "environment": [
      {
        "name": "MYSQL_HOST",
        "value": "${MYSQL_HOST}"
      },
      {
        "name": "MYSQL_DB",
        "value": "${MYSQL_DB}"
      },
      {
        "name": "MYSQL_USER",
        "value": "${MYSQL_USER}"
      },
      {
        "name": "MYSQL_PASS",
        "value": "${MYSQL_PASSWORD}"
      }
    ],
    "logConfiguration": {
      "logDriver": "awslogs",
      "options": {
        "awslogs-group": "${log_group_name}",
        "awslogs-region": "${log_group_region}"
      }
    },
    "networkMode": "awsvpc"
  }
]
