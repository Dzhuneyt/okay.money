{
  "name": "personal-finance",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "dev": "npm run installDeps && npm run beMigrations && concurrently 'npm run beLiteServer' 'npm run beLiteServerForTests' 'npm run feLiteServer'",
    "tests": "npm run installDeps && npm run beMigrations && concurrently 'npm run feUnitTests' 'npm run beUnitTests && npm run beFunctionalTests'",
    "installDeps": "concurrently 'npm run installDepsBackend' 'npm run installDepsFrontend'",
    "installDepsBackend": "cd backend && composer install -q --prefer-dist",
    "installDepsFrontend": "cd frontend && npm i -q --no-audit",
    "beMigrations": "cd backend && php yii migrate --interactive=0",
    "feLiteServer": "cd frontend && npm run start",
    "feUnitTests": "echo 'TO BE IMPLEMENTED' && exit 0; cd frontend && npm run test:cli",
    "beLiteServer": "cd backend && php yii server",
    "beLiteServerForTests": "cd backend && php yii server --test",
    "beUnitTests": "cd backend && php ./vendor/bin/phpunit -c ./tests/unit/phpunit.xml",
    "beFunctionalTests": "cd backend && php ./vendor/bin/phpunit -c ./tests/functional/phpunit.xml"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Dzhuneyt/Personal-Finance.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/Dzhuneyt/Personal-Finance/issues"
  },
  "homepage": "https://github.com/Dzhuneyt/Personal-Finance#readme",
  "dependencies": {
    "concurrently": "^4.1.1"
  }
}
